@model ProjektGrede.LoginModel

@{
    ViewBag.Title = "Prijava";
}

<h2 class="col-md-6 col-md-offset-3 text-center">Prijava za zalivanje</h2>

@using (Html.BeginForm("Prijava","Racun",new { ReturnUrl = ViewBag.ReturnUrl },FormMethod.Post, new { @class = "col-md-6 col-md-offset-3 text-center" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

   <div class="form-group col-md-6 col-md-offset-3">
    <label class="control-label">Uporabnik</label>
        <div class="input-group mb-3 ">
                <span class="input-group-addon">
                    <i class="fa fa-user"></i>
                </span>
            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", placeholder = "Vnesi uporabnika", type = "text" } })
            @Html.ValidationMessageFor(model => model.UserName)
            @*<input class="form-control" aria-label="Amount (to the nearest dollar)" type="text">*@
        </div>
    </div>
    <div class="form-group col-md-6 col-md-offset-3">
        <label for="exampleInputPassword1">Geslo</label>
            <div class="input-group mb-3">
                <span class="input-group-addon">
                    <i class="fa fa-lock"></i>
                </span>
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", type = "password", placeholder = "Geslo", id = "exampleInputPassword1" } })
                @Html.ValidationMessageFor(model => model.Password)
                @*<input class="form-control" id="exampleInputPassword1" type="password" placeholder="Password">*@
            </div>
            </div>
    <div class="col-md-6 col-md-offset-3">
        <p>
            <input type="submit" value="Prijava" class="btn-success" />
        </p>
    </div>
        }

    //    var options = { hour: 'numeric', minute: 'numeric' }
    //    var dateString = date.toLocaleString('de-DE', options);
    //    return dateString;
    //});
    new Chart(document.getElementById("bar-chart-dan"), {
        type: 'bubble',
        data: {
            datasets: [{
                label: 'Greda1',
                data: p1,
                backgroundColor: '#AD8651',
                borderColor: '#AD8651',
                pointStyle: 'star'
            },
                {
                    label: 'Greda2',
                    data: p2,
                    backgroundColor: '#419641',
                    borderColor: '#419641'
                },
                {
                    label: 'Greda3',
                    data: p3,
                    backgroundColor: '#00709C',
                    borderColor: '#00709C',
                    pointStyle: 'star'
                },
            ]
        },
        options: {
            scales: {
                xAxes: [{
                    //type: 'linear',
                    position: 'bottom',
                    type: 'category',

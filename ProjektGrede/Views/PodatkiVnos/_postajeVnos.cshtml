                <li class="list-group-item">
                    @Html.Partial("_UstvariVnos", Model.ElementAt(1))
                </li>
            </ul>
            
            <div class="card-footer text-muted">
                Zalivanje na gredi 2
            </div>
        </div>
        <div class="card mb-3 col-md-4" style="background-color:wheat;margin:5px 5px 15px 5px">
            <h3 class="card-header">GREDA 3</h3>
            <img style="height: 200px; width: 100%; display: block;" alt="Bilje" src="~/Slike/zelenjava3.png" />
